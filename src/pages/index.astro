---
import "../styles/global.css";

const GH = "https://github.com/ChanminK";
const repeat = Array.from({ length: 24 }, () => GH);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>alive</title>
  </head>
  <body>
    <div class="wrap">

      <header class="block b-solid">
        <h1 class="h-title">Hi, I'm Alive</h1>
        <p class="h-sub">I'm a Junior in high school, and I create stuff</p>
      </header>

      <section class="block b-solid">
        <h2 class="h-section">my socials</h2>

        <div class="row">
          <div class="label">github</div>
          <div class="value">
            <div class="repeat-line" title="github link repeated horizontally">
              {repeat.map((r, i) => (
                <span class="repeat-item" key={i}>
                  {r}
                  {i < repeat.length - 1 ? "  •  " : ""}
                </span>
              ))}
            </div>
          </div>
        </div>

        <div class="row">
          <div class="label">slack</div>
          <div class="value">@Iamalive</div>
        </div>

        <div class="row">
          <div class="label">email</div>
          <div class="value">thisischanmin.gmail.com</div>
        </div>
      </section>

      <footer class="ftr">
        <span>© {new Date().getFullYear()} alive</span>
      </footer>
    </div>
  </body>
</html>

