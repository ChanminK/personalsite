---

export async function getStaticPaths() {
  return [{ params: { slug: "hello-world" } }];
}

const { slug } = Astro.params;
---

<html lang="en" data-theme="dark" data-base={import.meta.env.BASE_URL}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{slug}</title>
  </head>
  <body>
    <main class="wrap">
      <h1>Blog post: {slug}</h1>
      <p>This is a smoke test page.</p>
      <p><a href={`${import.meta.env.BASE_URL}blog`}>‚Üê back to blog</a></p>
    </main>
  </body>
</html>
